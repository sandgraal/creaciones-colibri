---
layout: layouts/base.njk
title: Product Catalog
description: Discover Creaciones Colibrí hot sauces, granolas, and wellness pantry goods crafted with tropical ingredients.
search: true
localeLinks:
  es: /es/productos/
---

{% set translations = collections.i18n and collections.i18n[0].data.i18n %}
{% set defaultLocale = site.locale | default('en') %}
{% set currentLocale = locale | default(defaultLocale) %}
{% set localeStrings = translations and translations[currentLocale] %}
{% if localeStrings == null and translations and translations['en'] %}
  {% set localeStrings = translations['en'] %}
{% endif %}
{% set fallbackStrings = translations and translations['en'] %}
{% set catalogPageStrings = localeStrings and localeStrings.catalogPage %}
{% if catalogPageStrings == null and fallbackStrings %}
  {% set catalogPageStrings = fallbackStrings.catalogPage %}
{% endif %}
{% set catalogPageStrings = catalogPageStrings or {} %}
{% set searchStrings = catalogPageStrings.search or {} %}
{% set filterStrings = catalogPageStrings.filters or {} %}

<section class="page-intro">
  <h1 class="page-title">{{ catalogPageStrings.title or 'Explore Our Catalog' }}</h1>
  <p class="page-subtitle">{{ catalogPageStrings.subtitle or 'Small-batch sauces, snacks, and wellness pantry staples inspired by the biodiversity of Costa Rica and our Florida gardens. Browse by category or dive into each story-rich product.' }}</p>
</section>

<section
  class="search-panel"
  data-search-root
  data-search-endpoint="{{ '/search.json' | url }}"
  data-search-empty="{{ searchStrings.emptyMessage or 'No products match your criteria right now. Try adjusting filters or search terms.' }}"
  data-search-error="{{ searchStrings.errorMessage or 'Search is unavailable right now. Please try again later.' }}"
  data-search-clear-label="{{ searchStrings.clearLabel or 'Clear' }}"
  data-search-status-idle="{{ searchStrings.statusIdle or 'Type a product name or select filters to see matching items.' }}"
  data-search-status-cleared="{{ searchStrings.statusCleared or 'Search reset. Browse the categories below or start typing to filter.' }}"
  data-search-status-single="{{ searchStrings.statusSingle or '1 result matches your filters.' }}"
  data-search-status-multiple="{{ searchStrings.statusMultiple or '%count% results match your filters.' }}"
  data-search-status-empty="{{ searchStrings.statusEmpty or 'No results match your filters.' }}"
  data-search-status-error="{{ searchStrings.statusError or searchStrings.errorMessage or 'Search is unavailable right now. Please try again later.' }}">
  <div class="search-panel__header">
    <h2>{{ searchStrings.title or 'Search the pantry' }}</h2>
    <p>{{ searchStrings.intro or 'Look up ingredients, benefits, or product names to find the perfect match.' }}</p>
  </div>
  <div class="search-panel__controls">
    <label class="search-panel__label" for="catalog-search">{{ searchStrings.label or 'Search products' }}</label>
    <div class="search-panel__input-group">
      <input
        id="catalog-search"
        class="search-panel__input"
        type="search"
        name="search"
        placeholder="{{ searchStrings.placeholder or 'Try “ginger”, “vegan”, or “cacao”' }}"
        autocomplete="off"
        data-search-input>
      <button class="button button-secondary search-panel__clear" type="button" data-search-clear>
        {{ searchStrings.clearLabel or 'Clear' }}
      </button>
    </div>
  </div>
  <p class="search-panel__status" data-search-status aria-live="polite" role="status">
    {{ searchStrings.statusIdle or 'Type a product name or select filters to see matching items.' }}
  </p>
  <div class="search-filters">
    {% if collections.productCategories | length %}
      <fieldset class="filter-group">
        <legend class="filter-group__title">{{ filterStrings.categories or 'Categories' }}</legend>
        <div class="filter-list">
          {% for category in collections.productCategories %}
            {% set inputId = 'filter-category-' ~ category.slug %}
            <label class="filter-chip" for="{{ inputId }}">
              <input
                id="{{ inputId }}"
                class="filter-chip__input"
                type="checkbox"
                value="{{ category.name }}"
                data-filter-checkbox
                data-filter-type="category">
              <span class="filter-chip__label">{{ category.name }}</span>
            </label>
          {% endfor %}
        </div>
      </fieldset>
    {% endif %}

    {% if collections.productDietaryTags | length %}
      <fieldset class="filter-group">
        <legend class="filter-group__title">{{ filterStrings.dietary or 'Dietary' }}</legend>
        <div class="filter-list">
          {% for tag in collections.productDietaryTags %}
            {% set inputId = 'filter-dietary-' ~ tag.slug %}
            <label class="filter-chip" for="{{ inputId }}">
              <input
                id="{{ inputId }}"
                class="filter-chip__input"
                type="checkbox"
                value="{{ tag.tag }}"
                data-filter-checkbox
                data-filter-type="dietary">
              <span class="filter-chip__label">{{ tag.tag }}</span>
            </label>
          {% endfor %}
        </div>
      </fieldset>
    {% endif %}

    {% if collections.productBenefitTags | length %}
      <fieldset class="filter-group">
        <legend class="filter-group__title">{{ filterStrings.benefits or 'Benefits' }}</legend>
        <div class="filter-list">
          {% for tag in collections.productBenefitTags %}
            {% set inputId = 'filter-benefit-' ~ tag.slug %}
            <label class="filter-chip" for="{{ inputId }}">
              <input
                id="{{ inputId }}"
                class="filter-chip__input"
                type="checkbox"
                value="{{ tag.tag }}"
                data-filter-checkbox
                data-filter-type="benefits">
              <span class="filter-chip__label">{{ tag.tag }}</span>
            </label>
          {% endfor %}
        </div>
      </fieldset>
    {% endif %}
  </div>
  <div
    class="search-results"
    data-search-results
    aria-live="polite"
    aria-busy="false"></div>
</section>

{% for category in collections.productCategories %}
  <section class="product-category" id="category-{{ category.slug }}">
    <div class="product-category__headline">
      <h2>{{ category.name }}</h2>
    </div>
    <div class="product-grid">
      {% for product in category.items %}
        {% include "partials/product-card.njk" %}
      {% endfor %}
    </div>
  </section>
{% endfor %}
