---
permalink: /site.webmanifest
layout: null
content-type: application/manifest+json
---
{% set defaultLocale = site.locale or 'en' %}
{% set siteMeta = siteMeta %}
{% set localizedMeta = siteMeta.locales and siteMeta.locales[defaultLocale] %}
{% if localizedMeta %}
  {% set manifestName = localizedMeta.title or siteMeta.title or 'Creaciones Colibrí' %}
  {% set manifestDescription = localizedMeta.description or siteMeta.description %}
{% else %}
  {% set manifestName = siteMeta.title or 'Creaciones Colibrí' %}
  {% set manifestDescription = siteMeta.description %}
{% endif %}
{
  "name": "{{ manifestName }}",
  "short_name": "Colibrí",
  "description": "{{ manifestDescription }}",
  "lang": "{{ defaultLocale }}",
  "start_url": "{{ '/' | url }}",
  "scope": "{{ '/' | url }}",
  "display": "standalone",
  "background_color": "#fdf8f3",
  "theme_color": "#f16745",
  "icons": [
    {
      "src": "{{ '/img/logo/creaciones_colibri_logo-1x1-192w.png' | url }}",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{{ '/img/logo/creaciones_colibri_logo-1x1-512w.png' | url }}",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ]
}
