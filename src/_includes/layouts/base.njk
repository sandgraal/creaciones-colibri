<!DOCTYPE html>
{% assign defaultLocale = site.locale | default: 'en' %}
{% assign currentLocale = locale | default: defaultLocale %}
{% assign localePrefix = '' %}
{% if currentLocale != defaultLocale and currentLocale != 'en' %}
  {% assign localePrefix = '/' | append: currentLocale %}
{% endif %}
{% assign visionPath = localePrefix | append: '/#vision' %}
{% assign newsletterPath = localePrefix | append: '/#newsletter' %}
{% assign translations = nil %}
{% if collections.i18n and collections.i18n | size > 0 %}
  {% assign translations = collections.i18n[0].data.i18n %}
{% endif %}
{% assign localeStrings = nil %}
{% if translations %}
  {% assign localeStrings = translations[currentLocale] %}
{% endif %}
{% if localeStrings == nil and translations and translations[defaultLocale] %}
  {% assign localeStrings = translations[defaultLocale] %}
{% endif %}
{% if localeStrings == nil and translations and translations['en'] %}
  {% assign localeStrings = translations['en'] %}
{% endif %}
{% assign fallbackStrings = nil %}
{% if translations %}
  {% assign fallbackStrings = translations['en'] %}
{% endif %}
{% assign uiStrings = nil %}
{% if localeStrings and localeStrings.ui %}
  {% assign uiStrings = localeStrings.ui %}
{% endif %}
{% if uiStrings == nil and fallbackStrings and fallbackStrings.ui %}
  {% assign uiStrings = fallbackStrings.ui %}
{% endif %}
{% assign fallbackUi = nil %}
{% if fallbackStrings and fallbackStrings.ui %}
  {% assign fallbackUi = fallbackStrings.ui %}
{% endif %}
{% assign navStrings = nil %}
{% if uiStrings and uiStrings.nav %}
  {% assign navStrings = uiStrings.nav %}
{% endif %}
{% if navStrings == nil and fallbackUi and fallbackUi.nav %}
  {% assign navStrings = fallbackUi.nav %}
{% endif %}
{% assign footerStrings = nil %}
{% if uiStrings and uiStrings.footer %}
  {% assign footerStrings = uiStrings.footer %}
{% endif %}
{% if footerStrings == nil and fallbackUi and fallbackUi.footer %}
  {% assign footerStrings = fallbackUi.footer %}
{% endif %}
{% assign cartStrings = nil %}
{% if uiStrings and uiStrings.cart %}
  {% assign cartStrings = uiStrings.cart %}
{% endif %}
{% if cartStrings == nil and fallbackUi and fallbackUi.cart %}
  {% assign cartStrings = fallbackUi.cart %}
{% endif %}
{% assign brandStrings = nil %}
{% if uiStrings and uiStrings.brand %}
  {% assign brandStrings = uiStrings.brand %}
{% endif %}
{% if brandStrings == nil and fallbackUi and fallbackUi.brand %}
  {% assign brandStrings = fallbackUi.brand %}
{% endif %}
{% assign localeSwitcherStrings = nil %}
{% if uiStrings and uiStrings.localeSwitcher %}
  {% assign localeSwitcherStrings = uiStrings.localeSwitcher %}
{% endif %}
{% if localeSwitcherStrings == nil and fallbackUi and fallbackUi.localeSwitcher %}
  {% assign localeSwitcherStrings = fallbackUi.localeSwitcher %}
{% endif %}
{% assign navVisionLabel = navStrings.vision | default: 'Our Vision' %}
{% assign navProductsLabel = navStrings.products | default: 'Products' %}
{% assign navNewsletterLabel = navStrings.newsletter | default: 'Stay in Touch' %}
{% assign navContactLabel = navStrings.contact | default: 'Contact' %}
{% assign navBlogLabel = navStrings.blog | default: 'Blog' %}
{% assign cartLabel = cartStrings.label | default: 'Cart' %}
{% assign brandAlt = brandStrings.alt | default: 'Creaciones Colibrí logo' %}
{% assign footerTagline = footerStrings.tagline | default: 'Crafted in Florida & Costa Rica with love for the hummingbird and the people we serve.' %}
{% assign footerNote = footerStrings.note | default: '© Creaciones Colibrí' %}
{% assign localeSwitcherLabel = localeSwitcherStrings.ariaLabel | default: 'Language selector' %}
{% if currentLocale == 'es' %}
  {% assign productsPath = '/es/productos/' %}
  {% assign blogPath = '/es/blog/' %}
  {% assign contactPath = '/es/contacto/' %}
{% else %}
  {% assign productsPath = '/products/' %}
  {% assign blogPath = '/blog/' %}
  {% assign contactPath = '/contact/' %}
{% endif %}
{% assign homePath = '/' %}
{% if localePrefix != '' %}
  {% assign homePath = localePrefix | append: '/' %}
{% endif %}
{% assign localeLinksMap = localeLinks %}
{% assign siteMeta = siteMeta %}
{% assign siteMetaTranslations = siteMeta.translations %}
{% assign metaLocale = nil %}
{% if siteMetaTranslations %}
  {% assign metaLocale = siteMetaTranslations[currentLocale] %}
  {% if metaLocale == nil and siteMetaTranslations[defaultLocale] %}
    {% assign metaLocale = siteMetaTranslations[defaultLocale] %}
  {% endif %}
{% endif %}
{% assign baseTitle = siteMeta.title | default: '' %}
{% if metaLocale and metaLocale.title %}
  {% assign baseTitle = metaLocale.title %}
{% endif %}
{% assign defaultDescription = siteMeta.description %}
{% if metaLocale and metaLocale.description %}
  {% assign defaultDescription = metaLocale.description %}
{% endif %}
{% assign metaTitle = baseTitle %}
{% if title %}
  {% if baseTitle %}
    {% assign metaTitle = title | append: ' · ' | append: baseTitle %}
  {% else %}
    {% assign metaTitle = title %}
  {% endif %}
{% endif %}
{% assign metaDescription = description | default: defaultDescription %}
{% assign canonicalUrl = '' %}
{% if siteMeta.url %}
  {% assign canonicalUrl = page.url | url | absoluteUrl(siteMeta.url) %}
{% endif %}
<html lang="{{ currentLocale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ metaTitle }}</title>
    <meta name="description" content="{{ metaDescription }}">
    <meta name="theme-color" content="#f16745">
    <meta name="application-name" content="Creaciones Colibrí">
    {% if canonicalUrl %}
      <link rel="canonical" href="{{ canonicalUrl }}">
      <meta property="og:url" content="{{ canonicalUrl }}">
    {% endif %}
    {% if siteMeta.url and site.alternateLocales %}
      <link rel="alternate" hreflang="x-default" href="{{ '/' | absoluteUrl(siteMeta.url) }}">
      {% for localeCode in site.alternateLocales %}
        {% if localeCode == site.locale or localeCode == 'en' %}
          {% assign localePath = '/' %}
        {% else %}
          {% assign localePath = '/' | append: localeCode | append: '/' %}
        {% endif %}
        <link rel="alternate" hreflang="{{ localeCode }}" href="{{ localePath | absoluteUrl(siteMeta.url) }}">
      {% endfor %}
    {% endif %}
    {% set ogLocale = 'en_US' %}
    {% if currentLocale == 'es' %}
      {% set ogLocale = 'es_CR' %}
    {% endif %}
    <meta property="og:title" content="{{ metaTitle }}">
    <meta property="og:description" content="{{ metaDescription }}">
    <meta property="og:site_name" content="{{ siteMeta.title }}">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="{{ ogLocale }}">
    {% if site.alternateLocales and site.alternateLocales | length %}
      {% for localeCode in site.alternateLocales %}
        {% if localeCode != currentLocale %}
          {% set altLocale = 'en_US' %}
          {% if localeCode == 'es' %}
            {% set altLocale = 'es_CR' %}
          {% endif %}
          <meta property="og:locale:alternate" content="{{ altLocale }}">
        {% endif %}
      {% endfor %}
    {% endif %}
    <meta property="og:image" content="{{ siteMeta.socialImage | url | absoluteUrl(siteMeta.url) }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ metaTitle }}">
    <meta name="twitter:description" content="{{ metaDescription }}">
    <meta name="twitter:image" content="{{ siteMeta.socialImage | url | absoluteUrl(siteMeta.url) }}">
    <link rel="icon" type="image/svg+xml" href="{{ '/img/branding/creaciones-colibri-logo.svg' | url }}">
    <link rel="icon" type="image/svg+xml" sizes="any" href="{{ '/img/branding/maskable-icon.svg' | url }}">
    <link rel="apple-touch-icon" type="image/svg+xml" href="{{ '/img/branding/maskable-icon.svg' | url }}">
    <link rel="manifest" href="{{ '/site.webmanifest' | url }}">
    <link rel="mask-icon" href="{{ '/img/branding/maskable-icon.svg' | url }}" color="#f16745">
    <meta name="msapplication-TileColor" content="#f16745">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;600&family=Work+Sans:wght@300;400;500&display=swap"
      rel="stylesheet">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    {% if analytics %}
      {{ analytics() | safe }}
    {% endif %}
    {% if site.snipcart.publicKey %}
      <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.0.33/default/snipcart.css">
    {% endif %}
  </head>
  <body class="site">
    <header class="site-header">
      <a class="brand" href="{{ homePath | url }}">
        <img
          class="brand-logo"
          src="{{ '/img/branding/creaciones-colibri-logo.svg' | url }}"
          alt="{{ brandAlt }}"
        >
        <span class="brand-title">Creaciones Colibrí</span>
      </a>
      <nav class="site-nav">
        <a class="nav-link" href="{{ visionPath | url }}">{{ navVisionLabel }}</a>
        <a class="nav-link" href="{{ productsPath | url }}">{{ navProductsLabel }}</a>
        <a class="nav-link" href="{{ blogPath | url }}">{{ navBlogLabel }}</a>
        <a class="nav-link" href="{{ newsletterPath | url }}">{{ navNewsletterLabel }}</a>
        <a class="nav-link" href="{{ contactPath | url }}">{{ navContactLabel }}</a>
        {% if site.alternateLocales and site.alternateLocales | length %}
          <div class="locale-switcher" role="navigation" aria-label="{{ localeSwitcherLabel }}">
            {% for localeCode in site.alternateLocales %}
              {% assign alternateHref = localeLinksMap[localeCode] %}
              {% if localeCode != currentLocale and alternateHref %}
                <a class="locale-switcher__link" href="{{ alternateHref | url }}" hreflang="{{ localeCode }}">{{ localeCode | upper }}</a>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
        {% if site.snipcart.publicKey %}
          <button class="cart-button snipcart-checkout" type="button">
            <span class="cart-button__label">{{ cartLabel }}</span>
            <span class="cart-button__count snipcart-items-count">0</span>
          </button>
        {% endif %}
      </nav>
    </header>
    <main class="site-main">
      {{ content | safe }}
    </main>
    <footer class="site-footer">
      <p>{{ footerTagline }}</p>
      <p class="footer-note">{{ footerNote }}</p>
    </footer>
    {% if search %}
      <script defer src="{{ '/js/vendor/fuse.min.js' | url }}"></script>
      <script defer src="{{ '/js/search.js' | url }}"></script>
    {% endif %}
    {% if site.snipcart.publicKey %}
      <script>
        document.addEventListener("click", function(event) {
          const button = event.target.closest(".snipcart-add-item[data-quantity-input]");
          if (!button) return;
          const inputId = button.getAttribute("data-quantity-input");
          const quantityInput = document.getElementById(inputId);
          if (!quantityInput) return;
          const quantity = parseInt(quantityInput.value, 10);
          if (!Number.isFinite(quantity) || quantity <= 0) {
            button.setAttribute("data-item-quantity", "1");
            return;
          }
          button.setAttribute("data-item-quantity", quantity.toString());
        });
      </script>
      <script async src="https://cdn.snipcart.com/themes/v3.0.33/default/snipcart.js"></script>
      <div hidden id="snipcart" data-api-key="{{ site.snipcart.publicKey }}" data-currency="{{ site.snipcart.currency }}"></div>
    {% endif %}
  </body>
</html>
