---
layout: layouts/base.njk
title: Inicio
description: Salsas artesanales, snacks botánicos y despensa de bienestar creados entre Florida y Costa Rica.
locale: es
localeLinks:
  en: /
---

{% assign translations = collections.i18n[0].data.i18n %}
{% assign t = translations.es %}
{% assign catalogData = catalog.catalog %}
{% if catalogData == nil %}
  {% assign catalogData = catalog %}
{% endif %}
{% assign categories = catalogData.categories %}

<section class="hero">
  <div class="hero-media">
    <picture>
      <source srcset="{{ '/img/branding/creaciones-colibri-logo.svg' | url }}" type="image/svg+xml">
      <img class="hero-logo" src="{{ '/img/branding/creaciones-colibri-logo.svg' | url }}" alt="Logotipo de Colibrí">
    </picture>
  </div>
  <div class="hero-content">
    <h1>{{ t.hero.title }}</h1>
    <p>{{ t.hero.intro }}</p>
    <a class="button button-primary" href="{{ '/es/productos/' | url }}">{{ t.hero.cta }}</a>
  </div>
</section>

<section id="vision" class="content-section">
  <h2>{{ t.vision.title }}</h2>
  <p>{{ t.vision.intro }}</p>
</section>

<section id="catalogo" class="content-section content-grid">
  {% if categories and categories | size > 0 %}
    {% for category in categories %}
      {% assign categoryAnchor = category.slug | default: category.id %}
      {% assign firstProduct = category.products | first %}
      {% assign categoryLink = '/es/productos/#categoria-' | append: categoryAnchor %}
      <article class="card">
        <h3>{{ category.name }}</h3>
        {% if firstProduct %}
          <p>{{ firstProduct.shortDescription }}</p>
        {% endif %}
        <a class="button button-secondary" href="{{ categoryLink | url }}">Ver {{ category.name | lower }}</a>
      </article>
    {% endfor %}
  {% endif %}
</section>

<section id="newsletter" class="content-section newsletter">
  <h2>{{ t.newsletter.title }}</h2>
  <p>{{ t.newsletter.intro }}</p>
  {% if site.forms.newsletterAction %}
    <form class="newsletter-form" action="{{ site.forms.newsletterAction }}" method="POST">
      <label class="newsletter-form__label" for="newsletter-email-es">{{ t.newsletter.label }}</label>
      <div class="newsletter-form__controls">
        <input id="newsletter-email-es" class="newsletter-form__input" type="email" name="email" placeholder="tú@ejemplo.com" autocomplete="email" required>
        <button class="button button-primary newsletter-form__submit" type="submit">{{ t.newsletter.cta }}</button>
      </div>
    </form>
  {% else %}
    <p class="newsletter-placeholder">{{ t.newsletter.placeholder | safe }}</p>
  {% endif %}
</section>
