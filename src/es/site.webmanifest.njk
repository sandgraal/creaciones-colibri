---
permalink: /es/site.webmanifest
layout: null
content-type: application/manifest+json
---
{% set siteMeta = siteMeta %}
{% set localizedMeta = siteMeta.locales and siteMeta.locales['es'] %}
{% if localizedMeta %}
  {% set manifestName = localizedMeta.title or siteMeta.title or 'Creaciones Colibrí' %}
  {% set manifestDescription = localizedMeta.description or siteMeta.description %}
{% else %}
  {% set manifestName = siteMeta.title or 'Creaciones Colibrí' %}
  {% set manifestDescription = siteMeta.description %}
{% endif %}
{
  "name": "{{ manifestName }}",
  "short_name": "Colibrí",
  "description": "{{ manifestDescription }}",
  "lang": "es",
  "start_url": "{{ '/es/' | url }}",
  "scope": "{{ '/es/' | url }}",
  "display": "standalone",
  "background_color": "#fdf8f3",
  "theme_color": "#f16745",
  "icons": [
    {
      "src": "{{ '/img/branding/creaciones-colibri-logo.svg' | url }}",
      "sizes": "any",
      "type": "image/svg+xml"
    },
    {
      "src": "{{ '/img/branding/maskable-icon.svg' | url }}",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ]
}
