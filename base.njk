<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title | default("Creaciones Colibr√≠") }}</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
      }
      header {
        display: flex;
        justify-content: flex-end;
        padding: 1rem;
        background-color: #f7f7f7;
        border-bottom: 1px solid #e0e0e0;
      }
      .language-toggle button {
        margin-left: 0.5rem;
        padding: 0.25rem 0.5rem;
        border: 1px solid #ccc;
        background-color: #fff;
        cursor: pointer;
      }
      .language-toggle button.active {
        background-color: #333;
        color: #fff;
      }
      main {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="language-toggle">
        <button id="lang-en">EN</button>
        <button id="lang-es">ES</button>
      </div>
    </header>
    <main>
      {{ content | safe }}
    </main>
    <script>
      (function () {
        const setLang = (lang) => {
          document.documentElement.setAttribute('lang', lang);
          document.querySelectorAll('[lang]').forEach(el => {
            el.style.display = el.getAttribute('lang') === lang ? '' : 'none';
          });
          document.querySelectorAll('.language-toggle button').forEach(btn => {
            btn.classList.toggle('active', btn.id === 'lang-' + lang);
          });
        };
        document.getElementById('lang-en').addEventListener('click', () => setLang('en'));
        document.getElementById('lang-es').addEventListener('click', () => setLang('es'));
        // Default to English on load
        setLang('en');
      })();
    </script>
  </body>
</html>